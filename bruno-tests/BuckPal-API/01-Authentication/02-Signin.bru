meta {
  name: User Signin
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}{{apiPath}}/auth/signin
  body: json
  auth: none
}

body:json {
  {
    "email": "{{testEmail}}",
    "password": "{{testPassword}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should contain authentication token", function() {
    const data = res.getBody();
    expect(data).to.have.property('token');
    expect(data).to.have.property('type').to.equal('Bearer');
    expect(data).to.have.property('id');
    expect(data).to.have.property('email');
  });
  
  test("Store authentication token for subsequent requests", function() {
    const data = res.getBody();
    bru.setEnvVar('authToken', `Bearer ${data.token}`);
    bru.setEnvVar('userId', data.id.toString());
  });
}