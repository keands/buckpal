meta {
  name: Get User Accounts
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}{{apiPath}}/accounts
  body: none
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should be an array of accounts", function() {
    const data = res.getBody();
    expect(data).to.be.an('array');
    expect(data.length).to.be.greaterThan(0);
    
    const account = data[0];
    expect(account).to.have.property('id');
    expect(account).to.have.property('name');
    expect(account).to.have.property('accountType');
    expect(account).to.have.property('balance');
    expect(account).to.have.property('isActive');
  });
}