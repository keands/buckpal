meta {
  name: Create Transaction
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}{{apiPath}}/transactions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "accountId": "{{testAccountId}}",
    "amount": -50.00,
    "description": "Test grocery purchase",
    "merchantName": "Test Grocery Store",
    "transactionDate": "2024-09-06",
    "transactionType": "EXPENSE"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should contain transaction data", function() {
    const data = res.getBody();
    expect(data).to.have.property('id');
    expect(data.amount).to.equal(-50.00);
    expect(data.description).to.equal('Test grocery purchase');
    expect(data.transactionType).to.equal('EXPENSE');
    expect(data.accountId).to.equal(parseInt(bru.getEnvVar('testAccountId')));
    
    // Store transaction ID for other tests
    bru.setEnvVar('testTransactionId', data.id.toString());
  });
}